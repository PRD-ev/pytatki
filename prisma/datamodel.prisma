type User {
  id: ID! @id
  name: String!
  password: String!
  email: String! @unique
  role: String!
  image: String
  notes: [Note!] @relation(link: INLINE)
  groups: [Group!] @relation(link: INLINE)
}

type Note {
  id: ID! @id
  type: NoteType!
  title: String!
  author: User!
  content: String!
  parentFolder: Folder @relation(link: INLINE)
  group: Group! @relation(link: INLINE)
}

type Folder {
  id: ID! @id
  title: String!
  author: User! @relation(link: INLINE)
  parentFolder: Folder @relation(link: INLINE)
  group: Group! @relation(link: INLINE)
}

type Group {
  id: ID! @id
  name: String!
  members: [User!]
  image: String
  folders: [Folder!] 
  notes: [Note!]
}

enum NoteType {
  DOWNLOAD
  PYTATKI
  EXTERNAL
}